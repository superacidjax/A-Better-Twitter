= provide(:title, 'Sign in')
.vertical.stripes
  #form
    = form_for(:session, url: sessions_path) do |f|
      = f.label :email, 'email'
      = f.email_field :email

      = f.label :password, 'password'
      = f.password_field :password

      = f.submit "Sign in", class: "btn btn-large btn-primary"

    %p
      New user? #{link_to "Sign up now!", signup_path}